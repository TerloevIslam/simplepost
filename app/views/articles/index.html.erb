<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table class="table">
  <thead>
    <tr>
      <th>Author</th>
      <th>Headline</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.author_name %></td>
        <td><%= article.headline %></td>
        <td><%= article.body %></td>
        <td><%= link_to 'Show', user_article_path(article.user, article) %></td>
        <% if policy(article).edit? %>
          <td><%= link_to 'Edit', edit_user_article_path(article.user, article) %></td>
          <td><%= link_to 'Destroy', user_article_path(article.user, article), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <td colspan="3"></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Article', new_user_article_path(current_user) %>
<% end %>